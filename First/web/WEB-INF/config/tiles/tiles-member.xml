<tiles-definitions>
    <definition name="member/login.tiles" extends="template.index">
        <put-attribute name="title"     value="로그인" />
        <put-attribute name="contents"  value="/WEB-INF/view/member/login.jsp" />
    </definition>

    <definition name="member/addMember.tiles" extends="template.index">
